h2 Mirrors

= link_to "Add Mirror", new_settings_mirror_path, class: "btn btn-primary add-entry-btn"

section.panel.panel-default
  .panel-heading
    .panel-title SUSE
  .panel-body
    table.table
      thead
        tr
          th Name
          th URL
          th width="110"
      tbody
        tr
          td.mirror_1
            = link_to "Test", settings_mirror_path(1), class: "details-link"
          td
            .fa.fa-lock
            |  https://dockerhub.local.lan:5000
          td.actions
            = link_to edit_settings_mirror_path(1), class: "btn btn-default edit-btn" do
              .fa.fa-pencil
            = link_to settings_mirror_path(1), method: "delete", class: "btn btn-danger delete-btn", data: { confirm: "Are you sure?" } do
              .fa.fa-trash-o

